<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.APPPedidos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Imperio das pizzas</name>
    <description>
        Pedidos de Restaurante
    </description>
    <author>
        Nomes: Alexandre Miranda Rezende Rocha e Raquel da Silva Dornelas
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<icon src="www/img/LogoImperioDasPizzas.png" platform="android" height="57" density="mdpi" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
